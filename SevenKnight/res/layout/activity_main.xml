<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />
    
    <LinearLayout
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_above="@+id/ads"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="60dp"
	    android:orientation="vertical">
	        
    	<Button android:id="@+id/btn_new_normal_card"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/new_normal_card" />
    	
    	<Button android:id="@+id/btn_new_advanecd_card"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/new_advanced_card" />
    	
    	<Button android:id="@+id/btn_manage_card"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/manage_card" />
    	
    </LinearLayout>
 
    <com.mocoplex.adlib.AdlibAdViewContainer
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:id="@+id/ads"
	 	    android:layout_alignParentBottom="true"
	 	    isDefaultBanner="true" />

</RelativeLayout>
